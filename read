                    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                        ${brandsToList.map(key => {
                            const b = brandDB[key];
                            return `
                            <a href="${b.url}" target="_blank" class="block bg-white rounded-lg p-6 shadow-sm border border-stone-200 card-hover group">
                                <div class="flex justify-between items-start mb-2">
                                    <h3 class="font-bold text-lg text-stone-800 group-hover:text-amber-700">${key}</h3>
