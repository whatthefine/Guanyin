        const app = {
            currentPage: 'overview',
            chartInstances: {},

            init: function() {
                this.navigate('overview');
            },

            navigate: function(pageId) {
                this.currentPage = pageId;
                this.updateNav();
                this.renderContent();
            },

            updateNav: function() {
                document.querySelectorAll('.tab-btn').forEach(btn => {
                    btn.classList.remove('active-tab');
                    if (btn.getAttribute('onclick').includes(this.currentPage)) {
                        btn.classList.add('active-tab');
                    }
                });
            },

            renderContent: function() {
                const container = document.getElementById('content-area');
                container.innerHTML = ''; 

                switch (this.currentPage) {
                    case 'overview':
                        this.renderOverview(container);
                        break;
                    case 'products':
                        this.renderProducts(container);
                        break;
                    case 'benchmarks':
                        this.renderBenchmarks(container);
                        break;
                    case 'scents':
                        this.renderScents(container);
                        break;
                }
            },

            // --- VIEW: OVERVIEW ---
            renderOverview: function(container) {
                const section = document.createElement('section');
                section.className = 'space-y-6';
                section.innerHTML = `
                    <div class="bg-white p-6 rounded-xl shadow-sm border border-stone-200">
                        <div class="flex justify-between items-start">
                            <h2 class="text-xl font-bold mb-2 text-stone-800">å¸‚å ´ç«¶çˆ­åœ°åœ– (å…¨å“ç‰Œ)</h2>
                            <span class="text-amber-600 font-bold text-sm interaction-hint flex items-center">
                                <span class="text-xl mr-1">ğŸ‘†</span> é»æ“Šåœ–ä¸­å“ç‰Œåœ“é»å¯å‰å¾€å®˜ç¶²
                            </span>
                        </div>
                        <p class="text-stone-600 mb-4">${dataStore.overview.intro}</p>
                        
                        <div class="chart-container">
                            <canvas id="marketMatrixChart"></canvas>
                        </div>
                        <div class="flex justify-between text-xs text-stone-400 mt-2 px-8">
                            <span>åŠŸèƒ½æ€§ä½ (ç´”é¦™æ°›)</span>
                            <span>åŠŸèƒ½æ€§é«˜ (æŠ—èŒ/é™¤è‡­)</span>
                        </div>
                    </div>
                `;
                container.appendChild(section);

                // Initialize Scatter Chart
                setTimeout(() => {
                    const ctx = document.getElementById('marketMatrixChart').getContext('2d');
                    this.chartInstances.matrix = new Chart(ctx, {
                        type: 'scatter',
                        data: {
                            datasets: [{
                                label: 'å“ç‰Œåˆ†ä½ˆ',
                                data: dataStore.overview.matrixData,
                                backgroundColor: function(context) {
                                    const raw = context.raw;
                                    if (!raw) return '#d6d3d1';
                                    if (raw.brandKey === 'OurBrand') return '#b45309'; // Target
                                    if (['Laundrin', 'Aesop', 'Snuggle'].includes(raw.brandKey)) return '#78716c'; // Key competitors
                                    return '#e7e5e4'; // Others
                                },
                                borderColor: function(context) {
                                    const raw = context.raw;
                                    if (raw && raw.brandKey === 'OurBrand') return '#78350f';
                                    return 'transparent';
                                }
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                tooltip: {
                                    callbacks: {
                                        label: function(context) {
                                            return `${context.raw.label} (é»æ“Šè¨ªå•)`;
                                        }
                                    }
                                },
                                legend: { display: false }
                            },
                            scales: {
                                x: { 
                                    min: 0, max: 11,
                                    title: { display: true, text: 'å»å‘³/æŠ—èŒ åŠŸèƒ½æ€§å¼·å¼±' },
                                    grid: { color: '#f5f5f4' }
                                },
                                y: { 
                                    min: 0, max: 11,
                                    title: { display: true, text: 'åƒ¹æ ¼ / å“ç‰Œå¥¢è¯åº¦' },
                                    grid: { color: '#f5f5f4' }
                                }
                            },
                            onClick: (e, elements) => {
                                if (elements.length > 0) {
                                    const index = elements[0].index;
                                    const raw = this.chartInstances.matrix.data.datasets[0].data[index];
                                    const brandInfo = brandDB[raw.brandKey];
                                    if (brandInfo && brandInfo.url && brandInfo.url !== '#') {
                                        window.open(brandInfo.url, '_blank');
                                    }
                                }
                            },
                            onHover: (event, chartElement) => {
                                event.native.target.style.cursor = chartElement[0] ? 'pointer' : 'default';
                            }
                        }
                    });
                }, 0);
            },

            // --- VIEW: PRODUCTS ---
            renderProducts: function(container) {
                let activeCategoryIndex = 0;

                const renderSubView = () => {
                    const category = dataStore.products.categories[activeCategoryIndex];
                    
                    const html = `
                        <div class="mb-6">
                            <h2 class="text-xl font-bold text-stone-800 mb-2">ç”¢å“åƒ¹æ ¼å¸¶èˆ‡å“ç‰Œé€£çµ</h2>
                            <p class="text-stone-600">é»æ“Šä¸‹æ–¹çš„é•·æ¢åœ–ï¼Œå¯ç›´æ¥æŸ¥çœ‹è©²å“ç‰Œæ­¤é¡ç”¢å“çš„å®˜æ–¹é é¢ã€‚</p>
                        </div>

                        <div class="flex flex-wrap gap-2 mb-6">
                            ${dataStore.products.categories.map((cat, idx) => `
                                <button class="px-4 py-2 rounded-lg text-sm transition-colors ${idx === activeCategoryIndex ? 'bg-amber-700 text-white' : 'bg-white text-stone-600 border border-stone-200 hover:bg-stone-50'}"
                                    onclick="app.switchProductCategory(${idx})">
                                    ${cat.name}
                                </button>
                            `).join('')}
                        </div>

                        <div class="bg-white p-6 rounded-xl shadow-sm border border-stone-200">
                            <div class="flex flex-col lg:flex-row gap-8">
                                <div class="w-full lg:w-1/2">
                                    <h3 class="text-2xl font-bold text-stone-800 mb-2">${category.name}</h3>
                                    <p class="text-lg text-amber-800 font-medium mb-4">${category.summary}</p>
                                    <div class="bg-stone-50 p-4 rounded text-sm text-stone-600">
                                        <p>æ­¤åœ–è¡¨é¡¯ç¤ºè©²å“é …åœ¨å°ç£å¸‚å ´çš„ä¸»è¦ç«¶å“åƒ¹æ ¼åˆ†ä½ˆã€‚è«‹é»æ“Šå³å´åœ–è¡¨é•·æ¢ä»¥æ·±å…¥ç ”ç©¶ç«¶å“ã€‚</p>
                                    </div>
                                </div>
                                <div class="w-full lg:w-1/2">
                                    <div class="flex justify-end mb-2">
                                         <span class="text-amber-600 font-bold text-xs animate-pulse">ğŸ‘† é»æ“Šé•·æ¢å‰å¾€å®˜ç¶²</span>
                                    </div>
                                    <div class="chart-container" style="height: 300px;">
                                        <canvas id="productPriceChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    `;
                    container.innerHTML = html;

                    setTimeout(() => {
                        const ctx = document.getElementById('productPriceChart').getContext('2d');
                        if(this.chartInstances.price) this.chartInstances.price.destroy();
                        
                        this.chartInstances.price = new Chart(ctx, {
                            type: 'bar',
                            data: {
                                labels: category.priceLabels,
                                datasets: [{
                                    label: 'å”®åƒ¹ (NTD)',
                                    data: category.priceData,
                                    backgroundColor: '#d6d3d1',
                                    hoverBackgroundColor: '#b45309',
                                    borderRadius: 4
                                }]
                            },
                            options: {
                                indexAxis: 'y',
                                responsive: true,
                                maintainAspectRatio: false,
                                plugins: {
                                    legend: { display: false },
                                    tooltip: {
                                        callbacks: {
                                            label: (ctx) => `ç´„ NT$ ${ctx.raw} (é»æ“Šçœ‹å®˜ç¶²)`
                                        }
                                    }
                                },
                                scales: {
                                    x: { grid: { display: false } },
                                    y: { grid: { display: false } }
                                },
                                onClick: (e, elements) => {
                                    if (elements.length > 0) {
                                        const index = elements[0].index;
                                        const brandKey = category.brandKeys[index];
                                        const brandInfo = brandDB[brandKey];
                                        if (brandInfo && brandInfo.url) {
                                            window.open(brandInfo.url, '_blank');
                                        }
                                    }
                                },
                                onHover: (event, chartElement) => {
                                    event.native.target.style.cursor = chartElement[0] ? 'pointer' : 'default';
                                }
                            }
                        });
                    }, 0);
                };

                app.switchProductCategory = (idx) => {
                    activeCategoryIndex = idx;
                    renderSubView();
                };
                renderSubView();
            },

            // --- VIEW: BENCHMARKS (CARDS) ---
            renderBenchmarks: function(container) {
                const brandsToList = Object.keys(brandDB).filter(k => k !== 'OurBrand');
                
                const section = document.createElement('section');
                section.innerHTML = `
                    <div class="mb-8">
                        <h2 class="text-xl font-bold text-stone-800 mb-2">å“ç‰Œè©³ç´°è³‡æ–™åº«</h2>
                        <p class="text-stone-600">é»æ“Šå¡ç‰‡å¯ç›´æ¥å‰å¾€å®˜æ–¹ç¶²ç«™ã€‚</p>
